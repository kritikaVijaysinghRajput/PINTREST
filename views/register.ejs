<% include ./partials/header.ejs %>
    <div
        class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1579547621706-1a9c79d5c9f1?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
        <div class=" w-[26vw]  bg-white px-16 py-11 rounded-[30px]">
            <h1 class="text-3xl mb-7 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">
                Create New Account</h1>
            <form action="/register" method="post">
                <input class=" border-2 rounded-lg block mt-3 w-full px-3 py-2" type="text" name="username"
                    placeholder="username">
                <input class=" border-2 rounded-lg block mt-3 w-full px-3 py-2" type="text" name="fullname"
                    placeholder="Full Name">
                <input class=" border-2 rounded-lg block mt-3 w-full px-3 py-2" type="email" name="email"
                    placeholder="email">
                <input class=" border-2 rounded-lg block mt-3 w-full px-3 py-2" type="number" name="contact"
                    placeholder="contact">
                <input class=" border-2 rounded-lg block mt-3 w-full px-3 py-2" type="password" name="password"
                    placeholder="password">

                <input
                    class=" border-2 rounded-full block mt-3 w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer "
                    type="submit" value="Create New Account">
                <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree
                    to
                    Pinterest's
                    Terms of Service and acknowledge that you've read
                    our Privacy Policy Notice at collection
                </p>
            </form>
            <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing
                Account
            </a>
        </div>
    </div>
    <% include ./partials/footer.ejs %>
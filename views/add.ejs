<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">

        <h1 class="text-xl font-semibold">Create a new post </h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data" class="mt-5">
            <input class="block w-1/3 px-3 py-2 mb-3" type="file" name="postimage">
            <input class="block w-1/3 px-3 py-2 mb-3 border-2 rounded-md" type="text" placeholder="Title" name="title">
            <textarea class="block w-1/3 h-40 px-3 py-2 mb-3 border-2 rounded-md" type="text" placeholder="Description"
                name="description"></textarea>
            <input class="block w-1/3 px-3 py-2 bg-red-700 rounded-md font-semibold cursor-pointer" type="submit"
                value="Create Post">
        </form>

    </div>

    <% include ./partials/footer.ejs %>

        <style>
            @media screen and (max-width: 768px) {
                .w-full {
                    padding: 0 10px;
                }

                .block {
                    width: calc(100% - 6px);
                    /* Adjusting for input borders and padding */
                    margin-right: 3px;
                    margin-left: 3px;
                }
            }
        </style>
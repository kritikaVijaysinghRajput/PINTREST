<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen px-4 md:px-10 py-8">
        <div class="cards flex flex-wrap gap-4 md:gap-8">
            <% posts.forEach(function(elem){ %>
                <div class="card w-full md:w-1/2 lg:w-1/3 xl:w-1/4">
                    <div class="w-full shadow shadow-zinc-700 rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" alt="" class="w-full object-cover">
                    </div>
                    <div class="mt-2">
                        <h5 class="font-semibold text-sm">
                            <%= elem.title %>
                        </h5>
                        <h6 class="text-xs opacity-500">@<%= elem.user.username %>
                        </h6>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>

        <style>
            .cards {
                gap: 2rem;
            }

            .card {
                flex: 0 0 auto;
            }

            @media screen and (max-width: 768px) {
                .cards {
                    gap: 2rem;
                }

                .card {
                    width: 100%;
                    max-width: calc(50% - 1rem);
                }
            }

            @media screen and (min-width: 768px) {
                .cards {
                    gap: 3rem;
                }
            }

            @media screen and (min-width: 1024px) {
                .cards {
                    gap: 4rem;
                }
            }
        </style>
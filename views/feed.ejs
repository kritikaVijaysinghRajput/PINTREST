<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white ">
        <div class="cards flex flex-wrap gap-10">
            <% posts.forEach(function(elem){ %>
                <div class="card w-52 h-52">
                    <div class="w-full h-full  rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" alt="" class="w-full h-full object-cover">
                    </div>
                    <h5 class="mt-2 font-semibold text-sm">
                        <%= elem.title %>
                    </h5>
                    <h6 class="text-xs opacity-500">@<%= elem.user.username %>
                    </h6>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>
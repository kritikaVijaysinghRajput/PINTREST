<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen px-4 md:px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-4 md:gap-8">
            <% user.posts.forEach(function(elem){ %>
                <div class="card w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5">
                    <div class="w-full bg-sky-200 rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" alt="" class="w-full object-cover">
                    </div>
                    <h5 class="mt-2 font-semibold text-sm">
                        <%= elem.title %>
                    </h5>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>

        <style>
            @media screen and (max-width: 767px) {
                .cards {
                    gap: 1rem;
                }

                .card {
                    width: calc(50% - 0.5rem);
                }
            }

            @media screen and (min-width: 768px) and (max-width: 1023px) {
                .cards {
                    gap: 1.5rem;
                }
            }
        </style>